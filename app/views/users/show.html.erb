<h1>😉 <%= @user.username %></h1>

<h3>Your Posts:</h3>
<% if @posts %>
	<ul>
	<% @posts.each do |post| %>
	<li>
		<%= post.created_at.in_time_zone('Eastern Time (US & Canada)').strftime('%B %e, %Y, %I:%M %P')%> <br>
	  <%= link_to post.body, post_path(post.id) %> <%= post.emoji %> <br> 
	  <% if post.image.file? %>
	    <%= image_tag post.image.url(:thumb) %>
	  <% end %><br><br>
	</li>
	<% end%>
	</ul>
<% else %>
No Posts Yet 🙁
<% end %>