<!DOCTYPE html>
<html>
  <head>
    <title>Explore</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav>
    <ul id="top-nav">
       <li id="nav-link-color"><%= link_to 'Home', root_path %></li>
        <% if current_user %>
        	<li id="nav-link-color"><%= link_to current_user.username, user_path(current_user.id) %></li>
         	<li id="nav-link-color"><%= link_to 'Make New Post', new_post_path %></li>
         	<li id="nav-link-color"><%= link_to 'Log Out', logout_path%></li>
         <% else %>
           <li id="nav-link-color"><%= link_to "Create Account", new_user_path %></li>
           <li id="nav-link-color"><%= link_to 'Log In', login_path %></li>
         <% end %>
      </ul>
        <%= react_component 'SearchBar' %>
    </nav>
    <%= yield %>
  </body>
</html>
